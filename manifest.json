{
	"manifest_version" : 2,
	"name" : "Bitcoin Price",
	"version" : "1.0",

	"description" : "Bitcoin prices made easy",

	"icons" : {
		"48" : "resources/icon-48.png"
	},

	"permissions": [
		"activeTab",
		"tabs",
		"<all_urls>"
	  ],

	"content_scripts" : [
		{
			"matches" : ["<all_urls>"],
			"js" : [
				"main.js"
			]
		}
	]
}