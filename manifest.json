{
	"manifest_version" : 2,
	"name" : "Divitopia",
	"version" : "1.0.1",
	"author" : "The Divi Project",

	"homepage_url" : "https://github.com/DavidRockin/divitopia-extension",

	"description" : "Bitcoin prices made easy",

	"icons" : {
		"32" : "resources/icon-32.png",
		"48" : "resources/icon-48.png",
		"96" : "resources/icon-96.png",
		"128" : "resources/icon-128.png"
	},

	"permissions": [
		"activeTab",
		"tabs",
		"<all_urls>",
		"contextMenus",
		"menus"
	],

	"web_accessible_resources": [
		"resources/icon-divi.svg"
	],

	"content_scripts" : [
		{
			"matches" : ["<all_urls>"],
			"js" : [
				"main.js"
			]
		}
	],

	"browser_action" : {
		"default_icon" : {
			"32" : "resources/icon-32.png",
			"48" : "resources/icon-48.png",
			"96" : "resources/icon-96.png",
			"128" : "resources/icon-128.png"
		},
		"default_title" : "Divitopia",
		"default_popup" : "popup.html"
	},

	"background" : {
		"scripts" : [
			"contextmenu.js"
		]
	}
}